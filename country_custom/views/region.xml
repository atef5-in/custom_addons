<odoo>

    <record id="view_country_tree" model="ir.ui.view">
        <field name="name">res.country.state.tree</field>
        <field name="model">res.country.state</field>
        <field name="arch" type="xml">
            <tree string="Country Group" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_region" model="ir.actions.act_window">
        <field name="name">Régions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.state</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_region" name="Régions" parent="menu_country_root" sequence="20" action="action_region"/>

</odoo>