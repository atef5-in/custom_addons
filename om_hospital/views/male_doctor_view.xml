<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_male_doctor" model="ir.actions.act_window">
        <field name="name">male Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_gender':'male'}</field>
        <field name="domain">[('gender', '=' , 'male')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first male doctor record !
            </p>
        </field>
    </record>

    <menuitem id="menu_male_doctor" name="Male Doctors" parent="menu_doctor_master" sequence="00" action="action_hospital_male_doctor"/>

</odoo>