<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_medicament_tree" model="ir.ui.view">
        <field name="name">hospital.medicament.tree</field>
        <field name="model">hospital.medicament</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ref"/>
                <field name="price_unit"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_medicament_form" model="ir.ui.view">
        <field name="name">hospital.medicament.form</field>
        <field name="model">hospital.medicament</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="price_unit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_medicament" model="ir.actions.act_window">
        <field name="name">Medicaments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.medicament</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first medicament record !
            </p>
        </field>
    </record>

    <menuitem id="menu_medicament" name="Medicaments" parent="menu_hospital_root" sequence="20" action="action_hospital_medicament"/>

</odoo>