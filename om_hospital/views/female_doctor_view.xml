<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_female_doctor" model="ir.actions.act_window">
        <field name="name">Female Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_gender':'female'}</field>
        <field name="domain">[('gender', '=' , 'female')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first female doctor record !
            </p>
        </field>
    </record>

    <menuitem id="menu_female_doctor" name="Female Doctors" parent="menu_doctor_master" sequence="20" action="action_hospital_female_doctor"/>

</odoo>