<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'done'" decoration-danger="status == 'cancel'">
                <field name="patient_id"/>
                <field name="doctor_id" optional="show"/>
                <field name="booking_date" optional="show"/>
                <field name="app_time"/>
                <field name="status"
                       decoration-success="status == 'done'"
                       decoration-info="status == 'draft'"
                       decoration-warning="status == 'in_consultation'"
                       decoration-danger="status == 'cancel'"
                       widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_in_consultation" string="In consulation" type="object"/>
                    <button name="action_done" string="Done" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <field name="status" widget="statusbar" nolabel="1" statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="doctor_id"/>
                        </group>
                        <group>
                            <field name="booking_date"/>
                            <field name="app_time" help="Should be after the booking date !!"/>
                        </group>
                    </group>
                    <field name="pharmacy_line_ids">
                        <tree>
                            <field name="product_id"/>
                            <field name="qty"/>
                        </tree>
                        <form>
                            <field name="product_id"/>
                            <field name="qty"/>
                        </form>
                    </field>
                    <field name="prescription" placeholder="Enter your prescription"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your first appointment !
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment" name="Appointments" sequence="30" parent="menu_hospital_root" action="action_hospital_appointment"/>

</odoo>